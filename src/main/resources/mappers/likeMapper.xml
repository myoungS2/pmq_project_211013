<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.marondalgram.like.dao.LikeDAO">
 	<select id="selectLikeCountByEditionIdOrUserId" parameterType="map" resultType="int">
 		SELECT
 			count(1)
 		FROM
 			`like`
 		WHERE
 			`editionId` = #{editionId}
 			<if test="userId != null">
 			AND `userId` = #{userId}
 			</if>
 	</select>
 	<insert id="insertLike" parameterType="map">
 		INSERT INTO `like`
 		(
 			 `userId`
 			, `userNickname`
 			,`editionId`
 			, `createdAt`
 		)
 		VALUES
 		(
 			 #{userId}
 			, #{userNickname}
 			,#{editionId}
 			, now()
 		)
 	</insert>
 	
 	<delete id="deleteLikeByEditionIdUserId" parameterType="map">
 		DELETE
		FROM
			`like`
		WHERE
			postId = #{editionId}
			AND userId = #{userId}
 	</delete>
 </mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pmq.subscribe.dao.SubscribeDAO">
	<select id="selectSubscribeByEditionIdOrUserId" parameterType="map" resultType="int">
		SELECT
 			count(1)
 		FROM
 			`subscribe`
 		WHERE
 			`editionId` = #{editionId}
 			<if test="userId != null">
 				AND `userId` = #{userId}
 			</if>
	</select>
	<insert id="insertSubscribe" parameterType="map">
 		INSERT INTO `subscribe`
 		(
 			 `userId`
 			, `userLoginId`
 			, `editionId`
 			, `createdAt`
 		)
 		VALUES
 		(
 			 #{userId}
 			, #{userLoginId}
 			, #{editionId}
 			, now()
 		)
 	</insert>	
 	<delete id="deleteSubscribe" parameterType="map">
 		DELETE
 		FROM
 			`subscribe`
 		WHERE
 			`editionId` = #{editionId}
 			AND `userId` = #{userId}
 	</delete>
 	<select id="selectSubscribeList" parameterType="int" resultType="com.pmq.subscribe.model.Subscribe">
 		SELECT 
 			`id`
			, `userId`
			, `userLoginId`
			, `editionId`
			, `createdAt`
 		FROM
 			`subscribe`
 		WHERE
 			`editionId`	= #{editionId}
 	</select>
</mapper>